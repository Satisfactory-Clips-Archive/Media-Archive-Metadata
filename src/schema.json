{
	"$id": "https://archive.satisfactory.video/schema.json",
	"$schema": "http://json-schema.org/draft-07/schema",
	"required": [
		"@context",
		"@type"
	],
	"type": "object",
	"definitions": {
		"uniquestrings": {
			"minItems": 1,
			"type": "array",
			"uniqueItems": true,
			"items": {
				"type": "string"
			}
		},
		"url": {
			"oneOf": [
				{"type": "string"},
				{
					"$ref": "#/definitions/uniquestrings"
				}
			]
		},
		"person": {
			"type": "object",
			"required": [
				"@type",
				"name"
			],
			"properties": {
				"@type": {
					"type": "string",
					"const": "Person"
				},
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"jobTitle": {
					"type": "string"
				},
				"worksFor": {
					"required": [
						"@type",
						"name",
						"url"
					],
					"type": "object",
					"properties": {
						"@type": {
							"type": "string",
							"const": "Organization"
						},
						"name": {
							"type": "string"
						},
						"url": {
							"$ref": "#/definitions/url"
						}
					}
				},
				"subjectOf": {
					"type": "array",
					"minItems": 1,
					"items": {
						"oneOf": [
							{"$ref": "#/definitions/image"},
							{"$ref": "#/definitions/video"},
							{"$ref": "#/definitions/playlist"},
							{"$ref": "#/definitions/socialmediapost"}
						]
					}
				},
				"url": {
					"$ref": "#/definitions/url"
				},
				"relatedLink": {
					"$ref": "#/definitions/uniquestrings"
				},
				"alternateName": {
					"$ref": "#/definitions/uniquestrings"
				}
			}
		},
		"webpage": {
			"required": [
				"@type",
				"name"
			],
			"properties": {
				"@type": {
					"type": "string",
					"const": "WebPage"
				},
				"name": {
					"type": "string"
				},
				"url": {
					"$ref": "#/definitions/url"
				},
				"about": {
					"type": "array",
					"additionalItems": false,
					"minItems": 1,
					"items": [
						{
							"oneOf": [
								{
									"const": {
										"@type": "VideoGame",
										"name": "Satisfactory",
										"url": "https://satisfactorygame.com/",
										"author": {
											"@type": "Organization",
											"name": "Coffee Stain Studios AB",
											"url": "https://www.coffeestainstudios.com/"
										},
										"operatingSystem": "Windows",
										"applicationCategory": [
											"Game",
											"Factory Construction"
										]
									},
									"type": "object"
								}
							]
						}
					]
				},
				"relatedLink": {
					"$ref": "#/definitions/uniquestrings"
				},
				"alternateName": {
					"$ref": "#/definitions/uniquestrings"
				}
			}
		},
		"dimension": {
			"required": [
				"@type",
				"value"
			],
			"type": "object",
			"properties": {
				"@type": {
					"const": "QuantitativeValue",
					"type": "string"
				},
				"value": {
					"type": "integer"
				}
			},
			"additionalProperties": false
		},
		"image": {
			"type": "array",
			"minItems": 1,
			"items": {
				"required": [
					"@type",
					"contentUrl",
					"encodingFormat",
					"width",
					"height"
				],
				"type": "object",
				"properties": {
					"@type": {
						"const": "ImageObject",
						"type": "string"
					},
					"name": {
						"type": "string"
					},
					"contentUrl": {
						"type": "string"
					},
					"encodingFormat": {
						"enum": [
							"image/jpeg",
							"image/png"
						],
						"type": "string"
					},
					"width": {
						"$ref": "#/definitions/dimension"
					},
					"height": {
						"$ref": "#/definitions/dimension"
					},
					"relatedLink": {
						"type": "array",
						"minItems": 1,
						"uniqueItems": true,
						"items": {
							"type": "string"
						}
					},
					"usageInfo": {
						"type": "array",
						"minItems": 2,
						"items": {
							"enum": [
								"https://www.fandom.com/licensing",
								"https://satisfactory.gamepedia.com/Template:Copyright_first-party"
							],
							"type": "string"
						}
					},
					"discussionUrl": {
						"$ref": "#/definitions/url"
					},
					"url": {
						"$ref": "#/definitions/url"
					}
				}
			}
		},
		"video": {
			"type": "object",
			"required": [
				"@type",
				"description",
				"uploadDate",
				"thumbnailUrl",
				"url",
				"embedUrl"
			],
			"properties": {
				"@type": {
					"type": "string",
					"const": "VideoObject"
				},
				"name": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"uploadDate": {
					"type": "string"
				},
				"thumbnailUrl": {
					"type": "string"
				},
				"url": {
					"$ref": "#/definitions/url"
				},
				"embedUrl": {
					"type": "string"
				}
			}
		},
		"playlist": {
			"type": "object",
			"required": [
				"@type",
				"name",
				"startDate",
				"url"
			],
			"properties": {
				"@type": {
					"type": "string",
					"const": "CreativeWorkSeries"
				},
				"name": {
					"type": "string"
				},
				"startDate": {
					"type": "string"
				},
				"endDate": {
					"type": "string"
				},
				"url": {
					"$ref": "#/definitions/url"
				}
			}
		},
		"socialmediapost": {
			"type": "object",
			"required": [
				"@type",
				"datePublished",
				"url",
				"author"
			],
			"properties": {
				"@type": {
					"type": "string",
					"const": "SocialMediaPosting"
				},
				"name": {
					"type": "string"
				},
				"datePublished": {
					"type": "string"
				},
				"url": {
					"$ref": "#/definitions/url"
				},
				"author": {
					"$ref": "#/definitions/person"
				},
				"image": {
					"$ref": "#/definitions/image"
				}
			}
		}
	},
	"oneOf": [
		{"$ref": "#/definitions/person"},
		{"$ref": "#/definitions/webpage"}
	]
}
